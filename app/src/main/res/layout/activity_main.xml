<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:foregroundGravity="top|left"
        android:gravity="center|start|left"
        android:orientation="vertical"
        app:layout_constraintHeight_min="wrap"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/header"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingTop="30dp"
        android:background="@color/darkgray"
        ></View>

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="88dp"
        >

        <TextView
            android:id="@+id/title_productgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    Product Group"
            android:textSize="18sp"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"/>
        <LinearLayout
            android:id="@+id/linearlayout22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"

            android:layout_margin="10dp">
            <Spinner
                android:id="@+id/spinner_productgroup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/lightseagreen"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/title_literature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     Literature"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp">
            <Spinner
                android:id="@+id/spinner_literature"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:textColor="@color/lightseagreen"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout


                android:layout_width="60dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"


                app:boxStrokeColor="@color/black"
                android:gravity="center"
                android:layout_gravity="top|right"
                app:boxCornerRadiusTopEnd="5dp"


                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/editText_literature"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:text="  "
                    android:enabled="false" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/title_physiciansample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     Physician Sample"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                >
            <Spinner
                android:id="@+id/spinner_physiciansample"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:textColor="@color/lightseagreen"/>
            </LinearLayout>



            <com.google.android.material.textfield.TextInputLayout


                android:layout_width="60dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"


                app:boxStrokeColor="@color/black"
                android:gravity="center"
                android:layout_gravity="top|right"
                app:boxCornerRadiusTopEnd="5dp"


                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/editText_physiciansample"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:text="  "
                    android:enabled="false"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/title_gift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     Gift"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            >

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                >
            <Spinner
                android:id="@+id/spinner_gift"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:textColor="@color/lightseagreen"/>
            </LinearLayout>



            <com.google.android.material.textfield.TextInputLayout


                android:layout_width="60dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"


                app:boxStrokeColor="@color/black"
                android:gravity="center"
                android:layout_gravity="top|right"
                app:boxCornerRadiusTopEnd="5dp"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/editText_gift"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:text="  "
                    android:enabled="false" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="376dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="347dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:paddingTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/darkgray"
            ></View>



        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Accompanied with"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:enabled="true"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/field_accompaniedwith"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:boxStrokeColor="@color/black"
            app:boxCornerRadiusTopStart="5dp"



            android:inputType="textMultiLine"
            android:textColor="@color/lightseagreen" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Remarks"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:enabled="true"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:layout_margin="10dp"
                app:boxStrokeColor="@color/black"
                app:boxCornerRadiusTopStart="5dp"
                android:inputType="textMultiLine"
                android:textColor="@color/lightseagreen"

                />


        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            app:cornerRadius="5dp"
            android:background="@color/lightseagreen"
            android:text="Submit"
            android:textColor="@color/gray" />
    </LinearLayout>

</LinearLayout>